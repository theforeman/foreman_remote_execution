<%#
kind: job_template
name: Power Action - SSH Default
job_category: Power
description_format: '%{action} host'
provider_type: SSH
template_inputs:
- name: action
  description: Action to perform on the service
  input_type: user
  options: "restart\nshutdown"
  required: true
%>

echo <%= input('action') %> host && sleep 3
<%= case input('action')
      when 'restart_at'
        'echo "shutdown -r now" | at now + 1 minute'
      when 'restart'
        'reboot'
      when 'shutdown_at'
        'echo "shutdown -h now" | at now + 1 minute'
      else
        'shutdown -h now'
      end %>

