<%#
kind: job_template
name: Power Action - SSH Default
model: JobTemplate
job_category: Power
description_format: '%{action} host'
provider_type: SSH
template_inputs:
- name: action
  description: Action to perform on the service
  input_type: user
  options: "restart\nshutdown"
  required: true
%>

echo <%= input('action') %> host && sleep 3
<%= case input('action')
      when 'restart'
        '/sbin/shutdown -r +1'
      else
        '/sbin/shutdown -h now'
      end %>

